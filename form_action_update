<?php>
<script type="text/javascript">
function OnSubmitForm()
{
  if (document.frmLogin.operation[0].checked == true)
  {
    document.frmLogin.action="http://dev.bvcloads.com/login_action.php";
  }
  else if (document.frmLogin.operation[1].checked == true)
  {
    document.frmLogin.action="http://test.bvcloads.com/login_action.php";
  }
  else
  {
    document.frmLogin.action="https://www.bvcloads.com/login_action.php";
  }	  
  return true;
}
</script>

<div id="login_form">
